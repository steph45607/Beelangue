<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/belangue_favicon_color" />


    <TextView
        android:id="@+id/verificationStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/waiting"
        android:textSize="18sp" />

    <Button
        android:id="@+id/resendEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poller_one"
        android:text="@string/resend" />

<!--    <Button-->
<!--        android:id="@+id/changeEmailButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="@string/changeEmail"-->
<!--        />-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poller_one"
        android:text="Change Email"
        android:textColor="@color/secondary"
        app:backgroundTint="@color/transparent"
        app:iconTint="@color/transparent"
        app:strokeColor="@color/secondary"
        app:strokeWidth="2dp" />

</LinearLayout>